<div class="container">
    {{#if user}}
    <div class="alert alert-success" role="alert">
        <h1 class="display-4">{{user}}</h1>
        <button type="button" class="btn btn-primary mb-3" onclick="location.href='/logout'">Desloguear</button>
    </div>
    <h1 class="display-4">Registar producto</h1>
    <form action="http://localhost:8080/api/productos/guardar" method="POST" enctype="multipart/form-data"
        id="product-form">
        <div class="form-group mb-3">
            <label for="title">Nombre</label>
            <input class="form-control" id="title" type="text" name="title" required="true" />
        </div>
        <div class="form-group mb-3">
            <label for="price">Precio</label>
            <div class="input-group">
                <span class="input-group-text">$</span>
                <input class="form-control" id="price" type="number" step="any" name="price" required="true" />
            </div>
        </div>
        <div class="form-group mb-3">
            <label for="thumbnail">Imagen</label>
            <input class="form-control" id="thumbnail" type="file" name="thumbnail" required="true" />
        </div>
        <button type="submit" class="btn btn-primary mb-3">Registrar</button>
    </form>
    <div id="datos">
        {{> tabla-productos }}
    </div>
    {{> centro-mensajes }}
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.7.7/handlebars.min.js"></script>
    <script src="/socket-script.js"></script>
    {{else}}
    <h1 class="display-4">Login de usuario</h1>
    <form action="http://localhost:8080/login" method="POST" enctype="application/x-www-form-urlencoded"
        id="product-form">
        <div class="form-group mb-3">
            <label for="user">Ingrese su nombre</label>
            <input class="form-control" id="username" type="text" name="username" required="true" />
        </div>
        <div class="form-group mb-3">
            <label for="user">Ingrese su contrase√±a</label>
            <input class="form-control" id="password" type="text" name="password" required="true" />
        </div>
        <button type="submit" class="btn btn-primary mb-3">Enviar</button>
    </form>
    <button type="button" class="btn btn-primary mb-3" onclick="location.href='/signup'">Registrar</button>
    {{/if}}
</div>